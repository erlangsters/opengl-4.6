{erl_opts, [debug_info]}.
{deps, [
    {egl, {git, "https://github.com/erlangsters/egl-1.5.git", {tag, "master"}}}
]}.

{pre_hooks, [
    {"(linux|darwin)", compile,
        "env "
        "ERLANG_ERTS_DIR=$ERLANG_ROOT_DIR/erts-$ERLANG_ERTS_VER "
        "ERL_INTERFACE_DIR=$ERLANG_LIB_DIR_erl_interface "
        "make -C c_src"
    }
]}.
{post_hooks, [
    {"(linux|darwin)", clean, "make -C c_src clean"}
]}.

{plugins, [rebar3_ex_doc]}.
{ex_doc, [
    {main, "README.md"},
    {extras, [
        "README.md"
    ]},
    {source_url, "https://github.com/erlangsters/opengl-4.6"}
]}.
